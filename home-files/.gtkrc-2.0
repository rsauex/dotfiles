#{!
(define xft-config (get-arg #:xft))
}#

gtk-theme-name="Nordic-Darker"
gtk-icon-theme-name="breeze-dark"
gtk-font-name="UI-Sans-Serif, 11"
gtk-cursor-theme-size=0
gtk-toolbar-style=GTK_TOOLBAR_BOTH
gtk-toolbar-icon-size=GTK_ICON_SIZE_LARGE_TOOLBAR
gtk-button-images=1
gtk-menu-images=1
gtk-enable-event-sounds=1
gtk-enable-input-feedback-sounds=1

# Xft settings
gtk-xft-antialias=#{# (if (xft-config-antialias? xft-config) "1" "0") }#
gtk-xft-hinting=#{# (if (xft-config-hinting? xft-config) "1" "0") }#
gtk-xft-hintstyle=#{# (xft-config-hint-style xft-config) }#
gtk-xft-rgba=#{# (xft-config-rgba xft-config) }#
gtk-xft-dpi=#{# (number->string (* (xft-config-dpi xft-config) 1024)) }#
