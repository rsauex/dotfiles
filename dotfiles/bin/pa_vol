#!/bin/bash

# get default sink name
SINK_NAME=$(pacmd dump | awk '$1 == "set-default-sink" {print $2}')


if [ $# -eq 0 ]; then
    echo "pa_vol (+|-|mute) {[0-9]+%}"
else
    case "$1" in
        +|-)
            pactl set-sink-volume $SINK_NAME $1${2:-'1%'}
            ;;
        mute)
            pactl set-sink-mute $SINK_NAME toggle
    esac
fi
