set $W Mod4
set $C Control
set $M Mod1
set $S Shift

xwayland enable

font pango:Roboto Condensed,11

new_window pixel 2
new_float  pixel 2

set $default_mode mode "default", bar hidden_state hide

set $float exec --no-startup-id ugly_workaround_script.sh, floating toggle

for_window [class="(?i)gigolo"] $float
for_window [class="(?i)doublecmd"] $float
for_window [class="(?i)lazarus"] $float
for_window [class="(?i)yad"] $float

for_window [class=".*"] title_format "[ %title ]"

exec systemctl --user import-environment
exec systemctl --user start sway-session.target

include ~/.config/sway/config.d/*
