#!/bin/sh

B='#00000000'  # blank
C='#ffffff22'  # clear ish
D='#ff00ffcc'  # default
T='#ee00eeee'  # text
W='#880000bb'  # wrong
V='#bb00bbbb'  # verifying

~/.bin/i3lock-color/x86_64-pc-linux-gnu/i3lock \
-c 101010 \
--bar-indicator \
--bar-position h \
--bar-direction 1 \
--bar-max-height 50 \
--bar-base-width 50 \
--bar-color 000000cc \
--keyhlcolor 252525cc \
--bar-periodic-step 50 \
--bar-step 50 \
--bar-width 250 \
--redraw-thread \
\
--clock \
--force-clock \
--timepos 155:h-110 \
--timecolor b9b9b9ff \
--datepos 5:ty \
--datecolor b9b9b9ff \
--date-align 1 \
--time-align 1 \
--ringvercolor 15151555 \
--ringwrongcolor ff008888 &
